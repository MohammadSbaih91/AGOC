<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VMS</title>
    <link  rel="stylesheet" href="~/css/bootstrap.rtl.css" asp-append-version="true" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.6.0.min.js"></script>


</head>


<style> 

    /* Optional custom styles */
    .details-label {
        font-weight: bold;
    }

    body {
        font-family: "Calibri", Arial, sans-serif;
        font-size: 19px;
       
    }

    h1, h2, h3, h4, h5, h6 {   
        font-family: "Calibri", Georgia, serif;
    }

</style>

<body>
    <header >
        <nav class="navbar">   
            
            <div class="container-fluid d-flex align-items-center" style="height:70px">
                <a class="navbar-brand d-flex align-items-center">
                    <img src="@Url.Content("~/imges/logo_PNG.png")" alt="Logo" style="height: 60px;">
                    <span class="ms-3" style=" font-family: DroidSansArabic, sans-serif;
                          color: #8a1538;
                          font-size: 30px; letter-spacing:-1; font-weight:bold">نظام إدارة رسائل مكتب النائب العام</span>
                </a>
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)   
                    {
                        <li class="nav-item">
                            <p class="navbar-text mb-0" style="color: #8a1538; font-weight: bold; font-size: 15px;">مرحبًا, @User.Identity.Name</p>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="btn btn-link nav-link" style="color: #fff; font-weight: bold; font-size: 15px;">تسجيل الخروج</button>
                            </form>
                        </li>
                    }
                </ul>

            </div>
        </nav>


        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02" style="height:25px">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" style="color: white;" asp-area="" asp-controller="Vehicles" asp-action="Index">إدارة المركبات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: white;" asp-area="" asp-controller="Handover" asp-action="Index">إدارة تخصيص المركبات (المستأجرة)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: white;" asp-area="" asp-controller="TrafficViolation" asp-action="Index">إدارة المخالفات المرورية</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " style="color: white;" asp-area="" asp-controller="Parking" asp-action="Index">إدارة المواقف</a>
                            </li>

                            <!-- Admin Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: white;">
                                  إدارة النظام
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="VehiclesLookupMain" asp-action="Index">إضافة نوع المركبة</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="VehiclesLookupDetaile" asp-action="Index">إضافة موديل المركبة</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="VehicleCategoryLookup" asp-action="Index">إضافة فئة المركبة</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Smslog" asp-action="Index">سجل الرسائل</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>

