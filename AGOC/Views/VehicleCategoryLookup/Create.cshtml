@model AGOC.Models.VehicleCategoryLookup

@{
    ViewData["Title"] = "إضافة فئة جديدة";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">إضافة فئة جديدة</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-controller="VehicleCategoryLookup" asp-action="Create" method="post" id="categoryForm">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">الوصف</label>
                        <input asp-for="Description" class="form-control" placeholder="أدخل الوصف" data-toggle="tooltip" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Dropdown for VehiclesLookupDetail -->
                    <div class="form-group">
                        <label asp-for="VehiclesLookupDetailId" class="control-label">اختر النوع الفرعي للمركبة</label>
                        @Html.DropDownListFor(
                                 model => model.VehiclesLookupDetailId,
                                 new SelectList(ViewBag.VehiclesLookupDetails, "Id", "Description"),
                                 "اختر النوع الفرعي للمركبة",
                                 new { @class = "form-control" })
                        <span asp-validation-for="VehiclesLookupDetailId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="حفظ" class="btn btn-primary btn-block" />
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">العودة للقائمة</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
