@model AGOC.Models.VehiclesLookupMain

@{
    ViewData["Title"] = "  ";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">تعديل </h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit" method="post" id="vehicleLookupForm">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">الوصف</label>
                        <input asp-for="Description" class="form-control" placeholder="ادخل وصف المركبة"
                               data-toggle="tooltip" title="قم بتعديل وصف المركبة هنا." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="حفظ" class="btn btn-primary btn-block" />
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

}
