@model AGOC.ViewModels.VehiclesLookupDetaileIndexViewModel

<div class="container mt-4">
    <h2 class="text-center mb-4">تفاصيل أنواع المركبات</h2>

    <!-- Button to open the modal for adding a new vehicle detail -->
    <div class="text-right mb-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createVehicleDetaileModal">
            إضافة موديل جديد
        </button>
    </div>

    <!-- Table to display vehicle lookup details -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark text-center">
            <tr>
                <th>#</th>
                <th>نوع المركبة</th>
                <th>موديل المركبة</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var lookup in Model.PaginatedVehiclesDetails.Items)
            {
                <tr>
                    <td>@lookup.Id</td>
                    <td>@lookup.VehiclesLookupMainDescription</td>
                    <td>@lookup.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = lookup.Id })" class="btn btn-warning btn-sm">تعديل</a>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteConfirmationModal" data-id="@lookup.Id">حذف</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Partial View -->
    @await Html.PartialAsync("~/Views/Shared/PartialView/_Pagination.cshtml", Model.PaginatedVehiclesDetails)
</div>

<!-- Create Modal for VehiclesLookupDetaile -->
<div class="modal fade" id="createVehicleDetaileModal" tabindex="-1" role="dialog" aria-labelledby="createVehicleDetaileModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title" id="createVehicleDetaileModalLabel">إضافة موديل للمركبة</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Create Form -->
                <form asp-action="Create" method="post" id="vehicleLookupDetaileForm">

                    <!-- Dropdown for VehiclesLookupMain -->
                    <div class="form-group">
                        <label asp-for="CreateVehicleDetailModel.VehiclesLookupMainId" class="control-label">اختر نوع المركبة</label>
                        @Html.DropDownListFor(
                                 model => model.CreateVehicleDetailModel.VehiclesLookupMainId,
                                 new SelectList(ViewBag.VehiclesLookupMains, "Id", "Description"),
                                 "اختر نوع المركبة",
                                 new { @class = "form-control" })
                        <span asp-validation-for="CreateVehicleDetailModel.VehiclesLookupMainId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateVehicleDetailModel.Description" class="control-label">موديل</label>
                        <input asp-for="CreateVehicleDetailModel.Description" class="form-control" placeholder="أدخل الموديل" data-toggle="tooltip" />
                        <span asp-validation-for="CreateVehicleDetailModel.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="حفظ" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (Same as Before) -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">
                <h5 class="modal-title" id="confirmationModalLabel">تأكيد الحذف</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                هل انت متأكد من الحذف؟
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">نعم</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">لا</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            // Store the vehicle lookup detail ID to be deleted
            var deleteId;

            // Show delete confirmation modal and capture the vehicle detail ID
            $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                deleteId = button.data('id'); // Extract info from data-* attributes
            });

            // Handle delete confirmation
            $('#confirmDeleteButton').click(function () {
                window.location.href = '/VehiclesLookupDetaile/Delete/' + deleteId;
            });
        });
    </script>
}
