@model AGOC.Models.VehiclesLookupDetaile

@{
    ViewData["Title"] = "تعديل نوع فرعي للمركبة";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">تعديل نوع فرعي للمركبة</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit" method="post" id="vehicleLookupDetaileForm">
                    <input type="hidden" asp-for="Id" />

                    <!-- Description input field -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">الوصف</label>
                        <input asp-for="Description" class="form-control" placeholder="أدخل الوصف" data-toggle="tooltip" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Dropdown for VehiclesLookupMain -->
                    <div class="form-group">
                        <label asp-for="VehiclesLookupMainId" class="control-label">اختر نوع المركبة</label>
                        @Html.DropDownListFor(
                                 model => model.VehiclesLookupMainId,
                                 new SelectList(ViewBag.VehiclesLookupMains, "Id", "Description", Model.VehiclesLookupMainId),
                                 "اختر نوع المركبة",
                                 new { @class = "form-control" })
                        <span asp-validation-for="VehiclesLookupMainId" class="text-danger"></span>
                    </div>

                    <!-- Submit and cancel buttons -->
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="حفظ" class="btn btn-primary btn-block" />
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">العودة للقائمة</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
